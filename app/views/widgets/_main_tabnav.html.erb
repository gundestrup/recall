      t.named 'Home'
      t.links_to :controller => '/info', :action => "index"
    end

    add_tab do |t|
      t.named 'Welcome guest, click here to Login'
      t.links_to :controller => '/accounts', :action => "login"
    end if logged_in? == false

    add_tab do |t|
      t.named "Logout, #{current_user.name}"
      t.links_to :controller => '/accounts', :action => "logout"
    end if logged_in?
    
    add_tab do |t|
      t.named 'About'
      t.links_to :controller => '/info', :action =>  "about"
    end

    add_tab do |t|
      t.named 'Help'
      t.links_to :controller => '/info', :action => "help"
    end

    add_tab do |t|
      t.named 'Account'
      t.links_to :controller => '/accounts', :action => 'account'
    end if logged_in?

    add_tab do |t|
      t.named 'Signup'
      t.links_to :controller => '/accounts', :action => "signup"
    end if logged_in? == false

    add_tab do |t|
    	t.named 'Admin'
    	t.links_to :controller => '/admin'
    end if logged_in? && current_user.admin?

	add_tab do |t|
    	t.named 'Mobile'
    	t.links_to :controller => 'categories', :action => 'index', :format => 'mobile'
    end
    
