<table class="box" align="right">
    <tr>
        <td>
            <b>Most popular piles</b>
        </td>
    </tr>
    <% for pile in @popular_pile %>
        <tr>
            <td>
                <%= link_to pile.name, :controller => "piles", :action => 'show', :id => pile.id %>(<%= pile.popularity %>)
                <br/>
                <small>(<%=  link_to pile.category.name, :controller => 'categories', :action => 'show', :id => pile.category.id %>)</small>
            </td>
        </tr>



    <% end %>
</table>
<table border="0" class="box">
    <tr>
        <td>
            <b>Newest Piles</b>
        </td>
    </tr>
<% for pile in @latest_pile %>
<tr>
    <td>
        <%= link_to pile.name, :controller => "piles", :action => 'show', :id => pile %>(<%= Card.count(:all, :conditions => ["pile_id = ?", pile.id]) %>)
        <br/>
        <small>(<%=  link_to pile.category.name, :controller => 'categories', :action => 'show', :id => pile.category.id %>)</small>
    </td>
</tr>
<% end %>
</table>